<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AlamatActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/backBtnAlamat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/arrow" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Alamat"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/saveAlamatBtn"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:background="@drawable/background_save"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:text="Save"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/alamatTxt"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Alamat Kamu"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/textView32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Alamat"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:id="@+id/textView55"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="#E91E63"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12sp"
                android:text="*Jangan Sampai salah mengisi alamat"
                />
            <EditText
                android:id="@+id/alamatInputTxt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_password"
                android:drawableLeft="@drawable/baseline_person_pin_circle_24"
                android:drawableTint="#c4c4c6"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins"
                android:hint="Masukan Alamat Lengkap"
                android:paddingStart="15dp"
                android:textColorHint="#c4c4c6"
                android:textColor="#444444"
                android:maxLength="200"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/textView36"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/orangeCard"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12sp"
                android:text="*Aplikasi LPHFood hanya menerima pemesanan JABODETABEK"
                android:layout_marginTop="25dp"/>

            <TextView
                android:id="@+id/textView37"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/orangeCard"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12sp"
                android:text="*Pastikan alamat terisi dengan baik dan benar"
                />


        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>